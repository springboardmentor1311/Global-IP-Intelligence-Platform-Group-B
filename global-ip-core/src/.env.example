# --------------------------------------
# GLOBAL IP BACKEND - ENV TEMPLATE
# --------------------------------------
# Copy this file as ".env" and fill in real values
# NEVER commit actual secrets
# --------------------------------------

# ===============================
# SPRING PROFILE
# ===============================
SPRING_PROFILES_ACTIVE=dev


# ===============================
# SERVER
# ===============================
SERVER_PORT=8080


# ===============================
# DEV DATABASE (H2)
# ===============================
DB_URL_DEV=jdbc:h2:mem:ip_dev;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
DB_USER_DEV=sa
DB_PASSWORD_DEV=


# ===============================
# TEST DATABASE (H2 - PostgreSQL Mode)
# ===============================
DB_URL_TEST=jdbc:h2:mem:ip_test;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;MODE=PostgreSQL;DATABASE_TO_LOWER=TRUE;DEFAULT_NULL_ORDERING=HIGH
DB_USER_TEST=sa
DB_PASSWORD_TEST=


# ===============================
# PROD DATABASE (PostgreSQL)
# ===============================
DB_URL=jdbc:postgresql://localhost:5432/ipdb
DB_USER=postgres
DB_PASSWORD=postgres


# ===============================
# JWT CONFIG
# (Minimum 32 characters recommended)
# ===============================
JWT_SECRET=change-this-to-a-very-long-secure-random-string


# ===============================
# GOOGLE OAUTH2
# ===============================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=


# ===============================
# GITHUB OAUTH2
# ===============================
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=


# ===============================
# EPO (European Patent Office - OPS API)
# ===============================
EPO_BASE_URL=https://ops.epo.org/3.2
EPO_CONSUMER_KEY=
EPO_CONSUMER_SECRET=


# ===============================
# PATENTSVIEW API
# ===============================
PATENTS_VIEW_API_URL=https://api.patentsview.org/patents/query
PATENTS_VIEW_API_KEY=


# ===============================
# TRADEMARK SERVICE (Internal / Mock)
# ===============================
TRADEMARK_SERVICE_API_KEY=change-this-in-prod


# ===============================
# PATENT ANALYTICS (TREND SERVICE)
# ===============================
TRENDS_SERVICE_API_KEY=change-this-in-prod


# ===============================
# WEBSOCKET / FRONTEND ORIGINS
# (Used in application.yml)
# ===============================
FRONTEND_URL=http://localhost:3000
PRODUCTION_FRONTEND_URL=https://your-production-domain.com
